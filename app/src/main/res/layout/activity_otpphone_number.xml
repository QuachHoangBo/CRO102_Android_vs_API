<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_otp"
    tools:context=".lab1.OTPPhoneNumber">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="1dp"
        android:background="#80A6A6A6"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PhoneNumber:"
            android:textColor="#DCEDFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtOTPPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_layout"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="+84 ....."
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#172A3A"
            android:textColorHint="#D5D3D3" />

        <Button
            android:id="@+id/btnGetOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#004346"
            android:text="Get OTP"
            android:textColor="#DCEDFF" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="OTP:"
            android:textColor="#DCEDFF"
            android:textColorHint="#D5D3D3"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtOTP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_layout"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="123ABC"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#172A3A"
            android:textColorHint="#D5D3D3" />

        <Button
            android:id="@+id/btnLoginOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#004346"
            android:text="Login"
            android:textColor="#DCEDFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fontFamily="serif"
        android:text="Login With PhoneNumber"
        android:textColor="#172A3A"
        android:textSize="27dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>